        let currentAccount = 1;
        let currentPage = 'wallet';
        let currentFilter = 'all';

        // Criar partículas animadas
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // Posição aleatória
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const delay = Math.random() * 6;
                const duration = 4 + Math.random() * 4;
                
                particle.style.left = `${left}%`;
                particle.style.top = `${top}%`;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;
                
                particlesContainer.appendChild(particle);
            }
        }

        // Inicializar partículas
        createParticles();
        
        // Função para tornar um elemento editável
        function makeEditable(elementId) {
            const element = document.getElementById(elementId);
            
            element.addEventListener('click', function(e) {
                // Evitar que o evento se propague para elementos pais
                e.stopPropagation();
                
                const currentValue = this.textContent.trim();
                const input = document.createElement('input');
                input.type = 'text';
                input.value = currentValue;
                input.className = 'edit-input';
                
                // Substituir o elemento pelo input
                this.parentNode.replaceChild(input, this);
                input.focus();
                
                // Selecionar todo o texto no input
                input.select();
                
                // Quando o input perder foco, voltar ao texto normal
                input.addEventListener('blur', function() {
                    const newValue = this.value || currentValue;
                    const newElement = document.createElement('div');
                    newElement.id = elementId;
                    newElement.className = element.className;
                    newElement.innerHTML = newValue + '<div class="edit-indicator"></div>';
                    
                    // Substituir o input pelo novo elemento
                    this.parentNode.replaceChild(newElement, this);
                    
                    // Adicionar novamente o evento de clique
                    makeEditable(elementId);
                });
                
                // Permitir salvar com Enter
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        this.blur();
                    }
                });
            });
        }
        
        // Tornar todos os valores editáveis
        makeEditable('accountName');
        makeEditable('totalAmount');
        makeEditable('totalChange');
        makeEditable('mayaValue');
        makeEditable('mayaAmount');
        makeEditable('mayaChange');
        makeEditable('fergValue');
        makeEditable('fergAmount');
        makeEditable('fergChange');
        makeEditable('solanaValue');
        makeEditable('solanaAmount');
        makeEditable('solanaChange');
        makeEditable('ethereumValue');
        makeEditable('ethereumAmount');
        makeEditable('ethereumChange');
        
        // Adicionar interação aos itens da navegação
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                const page = this.getAttribute('data-page');
                
                if (page) {
                    // Atualizar navegação
                    document.querySelectorAll('.nav-item').forEach(nav => {
                        nav.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    // Trocar de página
                    switchPage(page);
                }
            });
        });

        // Adicionar funcionalidade aos botões de ação
        document.querySelectorAll('.action-button').forEach(button => {
            button.addEventListener('click', function() {
                const action = this.querySelector('.action-label').textContent;
                
                // Efeito visual de clique
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
                
                // Simular ação (pode ser substituído por funcionalidade real)
                console.log(`Ação "${action}" selecionada`);
            });
        });

        // Permitir edição do badge da conta
        document.getElementById('accountBadge').addEventListener('click', function() {
            const currentValue = this.textContent;
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentValue;
            input.className = 'edit-input';
            input.style.width = '60px';
            input.style.textAlign = 'center';
            
            // Substituir o elemento pelo input
            this.parentNode.replaceChild(input, this);
            input.focus();
            
            // Selecionar todo o texto no input
            input.select();
            
            // Quando o input perder foco, voltar ao texto normal
            input.addEventListener('blur', function() {
                const newValue = this.value || currentValue;
                const newElement = document.createElement('div');
                newElement.id = 'accountBadge';
                newElement.className = 'account-badge';
                newElement.textContent = newValue;
                
                // Substituir o input pelo novo elemento
                this.parentNode.replaceChild(newElement, this);
                
                // Adicionar novamente o evento de clique
                newElement.addEventListener('click', arguments.callee.caller);
            });
            
            // Permitir salvar com Enter
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    this.blur();
                }
            });
        });

        // Funções para a barra lateral de contas
        function openAccountsSidebar() {
            document.getElementById('accountsSidebar').classList.add('active');
            document.getElementById('sidebarOverlay').classList.add('active');
            document.getElementById('walletPage').classList.add('blurred');
            document.getElementById('navBar').classList.add('blurred');
        }

        function closeAccountsSidebar() {
            document.getElementById('accountsSidebar').classList.remove('active');
            document.getElementById('sidebarOverlay').classList.remove('active');
            document.getElementById('walletPage').classList.remove('blurred');
            document.getElementById('navBar').classList.remove('blurred');
        }

        // Abrir barra lateral ao clicar no badge da conta
        document.getElementById('accountBadge').addEventListener('click', openAccountsSidebar);

        // Fechar barra lateral
        document.getElementById('closeSidebar').addEventListener('click', closeAccountsSidebar);
        document.getElementById('sidebarOverlay').addEventListener('click', closeAccountsSidebar);

        // Trocar de conta
        document.querySelectorAll('.account-card').forEach(card => {
            card.addEventListener('click', function() {
                const accountId = this.getAttribute('data-account');
                
                if (accountId && accountId !== currentAccount.toString()) {
                    // Atualizar a conta ativa na barra lateral
                    document.querySelectorAll('.account-card').forEach(c => {
                        c.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    // Carregar dados da nova conta
                    loadAccountData(parseInt(accountId));
                    closeAccountsSidebar();
                }
            });
        });

        // Função para carregar dados da conta
        function loadAccountData(accountId) {
            const account = accountsData[accountId];
            if (!account) return;
            
            currentAccount = accountId;
            
            // Atualizar cabeçalho
            document.getElementById('accountBadge').textContent = account.badge;
            document.getElementById('accountName').innerHTML = account.name + '<div class="edit-indicator"></div>';
            
            // Atualizar saldo total
            document.getElementById('totalAmount').innerHTML = account.balance + '<div class="edit-indicator"></div>';
            document.getElementById('totalChange').innerHTML = account.change + '<div class="edit-indicator"></div>';
            
            // Atualizar ativos
            document.getElementById('mayaValue').innerHTML = account.assets.maya.value + '<div class="edit-indicator"></div>';
            document.getElementById('mayaAmount').innerHTML = account.assets.maya.amount + '<div class="edit-indicator"></div>';
            document.getElementById('mayaChange').innerHTML = account.assets.maya.change + '<div class="edit-indicator"></div>';
            
            document.getElementById('fergValue').innerHTML = account.assets.ferg.value + '<div class="edit-indicator"></div>';
            document.getElementById('fergAmount').innerHTML = account.assets.ferg.amount + '<div class="edit-indicator"></div>';
            document.getElementById('fergChange').innerHTML = account.assets.ferg.change + '<div class="edit-indicator"></div>';
            
            document.getElementById('solanaValue').innerHTML = account.assets.solana.value + '<div class="edit-indicator"></div>';
            document.getElementById('solanaAmount').innerHTML = account.assets.solana.amount + '<div class="edit-indicator"></div>';
            document.getElementById('solanaChange').innerHTML = account.assets.solana.change + '<div class="edit-indicator"></div>';
            
            document.getElementById('ethereumValue').innerHTML = account.assets.ethereum.value + '<div class="edit-indicator"></div>';
            document.getElementById('ethereumAmount').innerHTML = account.assets.ethereum.amount + '<div class="edit-indicator"></div>';
            document.getElementById('ethereumChange').innerHTML = account.assets.ethereum.change + '<div class="edit-indicator"></div>';
            
            // Reaplicar eventos de edição
            makeEditable('accountName');
            makeEditable('totalAmount');
            makeEditable('totalChange');
            makeEditable('mayaValue');
            makeEditable('mayaAmount');
            makeEditable('mayaChange');
            makeEditable('fergValue');
            makeEditable('fergAmount');
            makeEditable('fergChange');
            makeEditable('solanaValue');
            makeEditable('solanaAmount');
            makeEditable('solanaChange');
            makeEditable('ethereumValue');
            makeEditable('ethereumAmount');
            makeEditable('ethereumChange');
        }

        // Adicionar nova conta
        document.getElementById('addAccountCard').addEventListener('click', function() {
            alert('Funcionalidade de adicionar nova carteira será implementada em breve!');
        });

        // Função para trocar de página
        function switchPage(page) {
            currentPage = page;
            
            // Esconder todas as páginas
            document.getElementById('walletPage').style.display = 'none';
            document.getElementById('browserPage').style.display = 'none';
            document.getElementById('historyPage').style.display = 'none';
            document.getElementById('swapPage').style.display = 'none';
            document.getElementById('settingsPage').style.display = 'none';
            
            // Mostrar a página ativa
            if (page === 'wallet') {
                document.getElementById('walletPage').style.display = 'block';
            } else if (page === 'browser') {
                document.getElementById('browserPage').style.display = 'block';
                loadBrowserPage();
            } else if (page === 'history') {
                document.getElementById('historyPage').style.display = 'block';
                loadHistoryPage();
            } else if (page === 'swap') {
                document.getElementById('swapPage').style.display = 'block';
                loadSwapPage();
            } else if (page === 'settings') {
                document.getElementById('settingsPage').style.display = 'block';
                loadSettingsPage();
            }
        }

        // Carregar página do navegador
        function loadBrowserPage() {
            const accountsGrid = document.getElementById('accountsGrid');
            accountsGrid.innerHTML = '';
            
            // Adicionar todas as carteiras ao grid
            Object.keys(accountsData).forEach(accountId => {
                const account = accountsData[accountId];
                const isActive = parseInt(accountId) === currentAccount;
                
                const accountCard = document.createElement('div');
                accountCard.className = `grid-account-card ${isActive ? 'active' : ''}`;
                accountCard.setAttribute('data-account', accountId);
                
                accountCard.innerHTML = `
                    <div class="grid-account-badge">${account.badge}</div>
                    <div class="grid-account-name">${account.name}</div>
                    <div class="grid-account-balance">${account.balance}</div>
                    <div class="grid-account-change">${account.change}</div>
                `;
                
                accountCard.addEventListener('click', function() {
                    const accountId = this.getAttribute('data-account');
                    loadAccountData(parseInt(accountId));
                    switchPage('wallet');
                    
                    // Atualizar navegação
                    document.querySelectorAll('.nav-item').forEach(nav => {
                        nav.classList.remove('active');
                    });
                    document.querySelector('.nav-item[data-page="wallet"]').classList.add('active');
                });
                
                accountsGrid.appendChild(accountCard);
            });
        }

        // Carregar página do histórico
        function loadHistoryPage() {
            const transactionsContainer = document.getElementById('transactionsContainer');
            transactionsContainer.innerHTML = '';
            
            // Filtrar transações
            let filteredTransactions = transactionsData;
            
            if (currentFilter !== 'all') {
                if (['receive', 'send', 'swap'].includes(currentFilter)) {
                    filteredTransactions = transactionsData.filter(t => t.type === currentFilter);
                } else {
                    filteredTransactions = transactionsData.filter(t => t.crypto.toLowerCase().includes(currentFilter));
                }
            }
            
            // Agrupar transações por data
            const groupedTransactions = {};
            filteredTransactions.forEach(transaction => {
                if (!groupedTransactions[transaction.date]) {
                    groupedTransactions[transaction.date] = [];
                }
                groupedTransactions[transaction.date].push(transaction);
            });
            
            // Ordenar datas (mais recente primeiro)
            const sortedDates = Object.keys(groupedTransactions).sort((a, b) => new Date(b) - new Date(a));
            
            if (sortedDates.length === 0) {
                // Mostrar estado vazio
                transactionsContainer.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">􀉉</div>
                        <div class="empty-text">Nenhuma transação encontrada</div>
                        <div class="empty-subtext">Tente alterar os filtros para ver mais transações</div>
                    </div>
                `;
                return;
            }
            
            // Criar grupos de transações
            sortedDates.forEach(date => {
                const transactionGroup = document.createElement('div');
                transactionGroup.className = 'transaction-group';
                
                // Formatar data
                const dateObj = new Date(date);
                const formattedDate = dateObj.toLocaleDateString('pt-BR', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                });
                
                transactionGroup.innerHTML = `
                    <div class="transaction-group-header">
                        ${formattedDate.charAt(0).toUpperCase() + formattedDate.slice(1)}
                    </div>
                `;
                
                const transactionsList = document.createElement('div');
                
                // Adicionar transações do dia
                groupedTransactions[date].forEach(transaction => {
                    const transactionItem = document.createElement('div');
                    transactionItem.className = 'transaction-item';
                    
                    // Definir ícone e cor baseado no tipo
                    let iconClass = '';
                    let amountClass = '';
                    let iconSymbol = '';
                    
                    switch(transaction.type) {
                        case 'receive':
                            iconClass = 'receive';
                            amountClass = 'transaction-positive';
                            iconSymbol = '↓';
                            break;
                        case 'send':
                            iconClass = 'send';
                            amountClass = 'transaction-negative';
                            iconSymbol = '↑';
                            break;
                        case 'swap':
                            iconClass = 'swap';
                            amountClass = 'transaction-neutral';
                            iconSymbol = '⇄';
                            break;
                    }
                    
                    transactionItem.innerHTML = `
                        <div class="transaction-icon ${iconClass}">${iconSymbol}</div>
                        <div class="transaction-details">
                            <div class="transaction-type">
                                ${transaction.type === 'receive' ? 'Recebimento' : 
                                  transaction.type === 'send' ? 'Envio' : 'Troca'} de ${transaction.crypto}
                            </div>
                            <div class="transaction-meta">
                                ${transaction.time}
                                <div class="transaction-account">${transaction.accountName}</div>
                            </div>
                        </div>
                        <div class="transaction-amount">
                            <div class="transaction-crypto ${amountClass}">${transaction.amount}</div>
                            <div class="transaction-fiat">${transaction.fiat}</div>
                        </div>
                    `;
                    
                    transactionsList.appendChild(transactionItem);
                });
                
                transactionGroup.appendChild(transactionsList);
                transactionsContainer.appendChild(transactionGroup);
            });
        }

        // Carregar página de trocar
        function loadSwapPage() {
            const fromAmount = document.getElementById('fromAmount');
            const toAmount = document.getElementById('toAmount');
            const fromCurrency = document.getElementById('fromCurrency');
            const toCurrency = document.getElementById('toCurrency');
            
            // Calcular conversão inicial
            calculateSwap();
            
            // Adicionar event listeners
            fromAmount.addEventListener('input', calculateSwap);
            fromCurrency.addEventListener('change', calculateSwap);
            toCurrency.addEventListener('change', calculateSwap);
            
            // Botão de confirmação
            document.getElementById('confirmSwap').addEventListener('click', function() {
                const amount = parseFloat(fromAmount.value);
                const from = fromCurrency.value;
                const to = toCurrency.value;
                
                if (amount > 0) {
                    alert(`Troca confirmada: ${amount} ${from} por ${toAmount.value} ${to}`);
                    // Aqui iria a lógica real de troca
                } else {
                    alert('Por favor, insira um valor válido para trocar');
                }
            });
        }

        // Calcular troca
        function calculateSwap() {
            const fromAmount = document.getElementById('fromAmount');
            const toAmount = document.getElementById('toAmount');
            const fromCurrency = document.getElementById('fromCurrency');
            const toCurrency = document.getElementById('toCurrency');
            
            const amount = parseFloat(fromAmount.value) || 0;
            const from = fromCurrency.value;
            const to = toCurrency.value;
            
            if (from === to) {
                toAmount.value = amount.toFixed(2);
                return;
            }
            
            const rate = exchangeRates[from][to];
            const convertedAmount = amount * rate;
            
            toAmount.value = convertedAmount.toFixed(2);
        }

        // Carregar página de configurações
        function loadSettingsPage() {
            // Adicionar funcionalidade aos toggles
            document.querySelectorAll('.toggle-checkbox').forEach(toggle => {
                toggle.addEventListener('change', function() {
                    const label = this.parentElement.querySelector('.settings-item-label').textContent;
                    console.log(`${label}: ${this.checked ? 'Ativado' : 'Desativado'}`);
                });
            });
            
            // Adicionar funcionalidade aos itens de configuração
            document.querySelectorAll('.settings-item').forEach(item => {
                if (!item.querySelector('.toggle-switch')) {
                    item.addEventListener('click', function() {
                        const label = this.querySelector('.settings-item-label').textContent;
                        console.log(`Configuração clicada: ${label}`);
                        // Aqui iriam as funcionalidades reais para cada item
                    });
                }
            });
        }

        // Adicionar filtros do histórico
        document.querySelectorAll('.history-filter').forEach(filter => {
            filter.addEventListener('click', function() {
                const filterType = this.getAttribute('data-filter');
                
                // Atualizar filtros ativos
                document.querySelectorAll('.history-filter').forEach(f => {
                    f.classList.remove('active');
                });
                this.classList.add('active');
                
                // Aplicar filtro
                currentFilter = filterType;
                loadHistoryPage();
            });
        });

        // Inicializar a página
        loadBrowserPage();
        loadHistoryPage();
        loadSwapPage();
        loadSettingsPage();
    </script>
</body>
</html>
